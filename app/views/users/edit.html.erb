<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation" class="text-danger">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60"%>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="inputName" class="user-name">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName"%>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <label for="Introduction">Introduction</label><br/>
          <%= f.text_area :introduction, autofocus: true, id:"Introduction"%>
        </div>

        <%= f.submit "Update User",class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>