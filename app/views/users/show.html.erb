<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <therd>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </therd>
        <tbody>
          <%  @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <!--<td>ユーザーネーム：<%= book.user.name %></td>-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>