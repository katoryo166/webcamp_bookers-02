<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
  <div class="col-md-3">
    <%= render 'users/user', user: @user %>
    <%= render 'books/book', book: @book_show %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size: "100x100"%> <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
