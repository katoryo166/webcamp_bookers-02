<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, url: '/books', local:true do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <therd>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </therd>
        <tbody>
          <%  @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>